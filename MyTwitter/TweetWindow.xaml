<Window x:Class="MyTwitter.TweetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTwitter"
        mc:Ignorable="d"
        Title="TweetWindow" Height="200" Width="300">
	<Grid Margin="10,10,10,10">
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="auto"/>
		</Grid.ColumnDefinitions>
		<TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Name="TweetTextBox"  AcceptsReturn="True" Text="{Binding TweetText, Mode=TwoWay}" TextChanged="TweetTextBox_TextChanged" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
		<TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding TweetLength}" Margin="0,0,10,0" HorizontalAlignment="Right"/>
		<Button Grid.Row="1" Grid.Column="1" Width="80" Height="25" Content="送信" HorizontalAlignment="Right" Click="SendTweetButton_Click"/>
	</Grid>
</Window>
